{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Orbit Cursor",
  "version": "0.1.0",
  "identifier": "com.orbit-cursor",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Start Recording Dock",
        "label": "start_recording_dock",
        "url": "/start-recording-dock",
        "width": 500,
        "height": 92,
        "decorations": false,
        "resizable": false,
        "shadow": true,
        "transparent": true,
        "visible": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "windowEffects": {
          "effects": ["underWindowBackground", "mica"],
          "radius": 10,
          "state": "active"
        }
      },
      {
        "title": "Standalone ListBox",
        "label": "standalone_listbox",
        "url": "/standalone-listbox",
        "decorations": false,
        "resizable": false,
        "fullscreen": false,
        "transparent": true,
        "visible": false,
        "alwaysOnTop": true,
        "skipTaskbar": true
      },
      {
        "title": "Recording Input Options",
        "label": "recording_input_options",
        "url": "/recording-input-options",
        "width": 192,
        "height": 210,
        "decorations": false,
        "resizable": false,
        "shadow": true,
        "transparent": true,
        "visible": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "windowEffects": {
          "effects": ["underWindowBackground", "mica"],
          "radius": 10,
          "state": "active"
        }
      },
      {
        "title": "Region Selector",
        "label": "region_selector",
        "url": "/region-selector",
        "decorations": false,
        "resizable": false,
        "fullscreen": false,
        "shadow": false,
        "visible": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "acceptFirstMouse": true
      },
      {
        "title": "Recording Source Selector",
        "label": "recording_source_selector",
        "url": "/recording-source-selector",
        "width": 300,
        "height": 40,
        "decorations": false,
        "resizable": false,
        "shadow": true,
        "transparent": true,
        "visible": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "windowEffects": {
          "effects": ["underWindowBackground", "mica"],
          "radius": 10,
          "state": "active"
        }
      },
      {
        "title": "Editor",
        "label": "editor",
        "url": "/editor",
        "width": 800,
        "height": 600,
        "visible": false,
        "hiddenTitle": true,
        "acceptFirstMouse": true,
        "titleBarStyle": "Overlay"
      }
    ],
    "security": {
      "csp": "http://asset.localhost",
      "assetProtocol": {
        "enable": true,
        "scope": ["$TEMP/**", "$APPDATA/**"]
      }
    },
    "trayIcon": {
      "id": "tray_icon",
      "iconPath": "icons/system-tray-default.ico",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": "entitlements.plist"
    }
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:orbit-cursor.db"]
    }
  }
}
